

<!-- First Grid -->


  <% @data.each do |item| %>

  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
        </div>
        <div class="media-content">
          <p class="title is-4" ><%=item.name%></p>
           <%= link_to item.name, item %>
        </div>
      </div>

      <div class="content">
      <%=item.description%>

      </div>
    </div>
  </div>


  <% end %>

<%= paginate @data %>